{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiDocumentationSettings": {
    "Title": "Classifieds API",
    "Version" : "v1"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Debug"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "classifieds-api-{0:yyyy.MM.dd}"
        }
      }
    ]
  },
  "ConnectionStrings" : {
    "ApplicationDbConnectionString" : "User ID=postgres;Host=localhost;Port=15432;Database=classifieds-db;Pooling=true;",
    "RedisConnectionString" : "localhost:16379"
  },
  "RedisInstanceName" : "classifieds_api",
  "JwtSettings" : {
    "Issuer" : "classifieds_api",
    "Audience" : "classifieds_api",
    "SigningKey" : "181918191819181918191819181918191819181918191819",
    "ValidityPeriodInMinutes" : 4320
  }
}
